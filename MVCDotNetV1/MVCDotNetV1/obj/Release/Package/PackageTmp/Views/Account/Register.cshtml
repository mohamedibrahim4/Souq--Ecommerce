@model MVCDotNetV1.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}






<!-- register -->
<div class="register">
    <div class="container">
        <h2>Create New Acount </h2>
        <div class="login-form-grids">


            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))

            {

                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Address.Country, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Address.Country, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address.Country)

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Address.City, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Address.City, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address.City)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Address.Street, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Address.Street, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address.Street)

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Address.BuildingNumber, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Address.BuildingNumber, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address.BuildingNumber)


                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CustomerVISA, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.CustomerVISA, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CustomerVISA)


                    </div>

                </div>
              




                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-3">
                        <input type="submit" class="btn btn-default" value="Add" />
                    </div>
                </div>
            }

        </div>

    </div>
</div>
<!-- //register -->
<!-- //register -->
